
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link href="~/css/Slidebar.css" rel="stylesheet" />
</head>

    <body style="background-color:#F0FFFF">
        <div class="container">
            <div class="row justify-content-center" style="margin-top:15%;">
                <div class="col-sm-6">
                    <div class="alert alert-warning d-none" id="msg" style="text-align:center;"></div>
                    <div class="card">
                        <div class="card-header" style="text-align: center; color: black; background-color: #F5FFFA; ">
                            Welcome To Login To System
                        </div>
                        <div class="card-body">
                            <form class="needs-novalidate" novalidate>
                                <div class="form-row">
                                    <div class="col-sm-12">
                                        <div class="input-group mt-3">
                                           <button class="btn btn-outline-secondary" disabled type="button" id="button-addon1"><i class="fa fa-user"></i></button>
                                           <input type="text" class="form-control" id="idUsername" placeholder="Username" required>
                                        <div class="invalid-feedback">Please input usercode !</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-sm-12">
                                        <div class="input-group mt-3">
                                           <button class="btn btn-outline-secondary" disabled type="button" id="button-addon1"><i class="fa fa-key"></i></button>
                                           <input type="password" class="form-control"id="idPassword" placeholder="Password" required>
                                        <div class="invalid-feedback">Please input password !</div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                 <div class="d-grid gap-2">
                                    <button class="btn btn-primary btn-block" id="log" type="submit">Login</button>
                                 </div>                               
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>

<script type="text/javascript">

    ///* Show-hide-password*/
    //$(function () {
    //    $("#eye").click(function () {
    //        $(this).toggleClass("fa-eye fa-eye-slash");
    //        var type = $(this).hasClass("fa-eye-slash") ? "text" : "password";
    //        $("#idPassword").attr("type", type);
    //    });
    //});
    //enter login

    $(document).ready(function () {
        $('#idUsername').focus()
    });

    $(function () {
        $('#idPassword').keypress(function (event) {
            if (event.keyCode == 13) {
                $('#log').click();
            }
        })
    })

    var form = document.getElementsByClassName('needs-novalidate');
    var Validation = Array.prototype.filter.call(form, function (forms) {
        forms.addEventListener('submit', function (event) {
            if (forms.checkValidity() === false) {
                event.preventDefault();
            } else {
                event.preventDefault();
                //var obj = {}
                ////obj.id=Id
                //obj.userCode=$('#idUsername').val()
                //obj.password=$('#idPassword').val()
                $.ajax({
                    url: '@Url.Action("CheckLogin", "Login")',
                    type: 'GET',
                    dataType: 'JSON',
                    data: { usercode: $('#idUsername').val(), password: $('#idPassword').val() },
                     //data: { obj:obj },
                    success: function (data) {
                        if (data.errCode == 0) {
                            window.location.replace('@Url.Action("Index","Home")')
                        } else if (data.errCode == 4) {
                            window.location.replace('@Url.Action("ChangeDefaultPassword", "ChangeDefaultPassword")')
                        } else {
                            $('#msg').removeClass('d-none')
                            $('#msg').text(data.errMsg) //values
                            setTimeout(function () {
                                $('#msg').addClass('d-none')
                            },5000)
                        }
                    }
                })
            }
            forms.classList.add('was-validated');
        }, false)
    });

</script>